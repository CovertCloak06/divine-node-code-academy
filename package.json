{
  "name": "divine-node-code-academy",
  "version": "1.0.0",
  "description": "Interactive coding education platform for complete beginners",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint src/ js/ --ext .js",
    "lint:fix": "eslint src/ js/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"js/**/*.js\" \"css/**/*.css\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "education",
    "coding",
    "interactive",
    "learn-to-code",
    "tutorial"
  ],
  "author": "Divine Node",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.1.0",
    "husky": "^8.0.3",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
