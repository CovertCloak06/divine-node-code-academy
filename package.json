{
  "name": "divine-node-code-academy",
  "version": "1.0.0",
  "description": "Interactive coding education platform for complete beginners",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test tests/a11y",
    "lint": "eslint src/ js/ --ext .js",
    "lint:fix": "eslint src/ js/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"js/**/*.js\" \"css/**/*.css\"",
    "format:check": "prettier --check \"src/**/*.js\" \"js/**/*.js\" \"css/**/*.css\"",
    "type-check": "tsc --noEmit",
    "analyze": "vite build --mode analyze",
    "lighthouse": "lhci autorun",
    "license-check": "license-checker --summary",
    "security-audit": "npm audit --production",
    "commit": "cz",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "keywords": [
    "education",
    "coding",
    "interactive",
    "learn-to-code",
    "tutorial"
  ],
  "author": "Divine Node",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vitest/ui": "^1.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "happy-dom": "^20.1.0",
    "husky": "^8.0.3",
    "jsdom": "^27.4.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "semantic-release": "^24.2.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.0.0",
    "web-vitals": "^5.1.0"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
